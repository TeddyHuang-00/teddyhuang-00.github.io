---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const locale = getLangFromUrl(Astro.url);
const localeString = useTranslations(locale);

// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path, without locale prefix
// eg: /en/tags/tailwindcss => ['tags', 'tailwindcss']
const urlParts = currentUrlPath.split("/").slice(2);

// Display strings for breadcrumb
const breadcrumbList = [...urlParts];

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (urlParts[0] === "posts") {
  breadcrumbList.splice(
    0,
    2,
    `${localeString("nav.posts")} (${localeString("nav.page-number", {
      page: breadcrumbList[1] || "1",
    })})`
  );
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (urlParts[0] === "tags") {
  breadcrumbList.splice(0, 1, localeString("nav.tags"));
  if (!Number.isNaN(Number(urlParts[2]))) {
    breadcrumbList.splice(
      1,
      3,
      `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : `(${localeString("nav.page-number", { page: breadcrumbList[2] })})`}`
    );
  }
}

// Some other simple replacements for i18n
if (urlParts[0] === "archives") {
  breadcrumbList.splice(0, 1, localeString("nav.archives"));
}
if (urlParts[0] === "search") {
  breadcrumbList.splice(0, 1, localeString("nav.search"));
}
if (urlParts[0] === "about") {
  breadcrumbList.splice(0, 1, localeString("nav.about"));
}
---

<nav class="px-4 mx-auto mt-8 mb-1 w-full max-w-app" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100 flex items-center"
  >
    <li>
      <a href={getRelativeLocaleUrl(locale, "/")} class="opacity-80">
        {localeString("nav.home")}
      </a>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <Icon
              aria-hidden="true"
              name="tabler:chevron-right"
              class="inline-block opacity-80 size-4"
            />
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {breadcrumb}
            </span>
          </li>
        ) : (
          <li>
            <Icon
              aria-hidden="true"
              name="tabler:chevron-right"
              class="inline-block opacity-80 size-4"
            />
            <a
              href={getRelativeLocaleUrl(locale, `/${urlParts[index]}/`)}
              class="pr-1 capitalize opacity-70"
            >
              {breadcrumb}
            </a>
          </li>
        )
      )
    }
  </ul>
</nav>
